# ─── Google Calendar Integration ──────────────────────────────────────────────
# Service account email from Google Cloud Console
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com

# Service account private key (copy the full key including header/footer, with literal \n)
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Your Google Calendar ID (usually your Gmail address)
GOOGLE_CALENDAR_ID=your.email@gmail.com

# ─── Owner Information ────────────────────────────────────────────────────────
# Your email – added as organizer/attendee on every booked event
OWNER_EMAIL=your.email@gmail.com

# Displayed on the booking page (public)
NEXT_PUBLIC_OWNER_NAME=Fred Edvisorio
NEXT_PUBLIC_OWNER_TITLE=Co-founder & CEO at Edvisor

# ─── Scheduling Configuration ─────────────────────────────────────────────────
# IANA timezone for generating working-hours slots (server-side)
TIMEZONE=America/New_York

# Working hours in the timezone above (24-hour format)
WORK_HOURS_START=9
WORK_HOURS_END=18

# Meeting duration in minutes
MEETING_DURATION_MINUTES=30
NEXT_PUBLIC_MEETING_DURATION_MINUTES=30
